  #app .nav a.cur,
  .user-container .user-tabs .van-tag--mark,
  .search .search-bar-wrap .search-bar-word .word,
  .Following .van-tab--active .van-tab__text
    color #fefefe !important

.t_Tomori
  .setting .app-title-desc::before,
  .Home .home-title::before
    background url("https://upload-bbs.miyoushe.com/upload/2024/04/17/190122060/32ef5e5e1cf7f5fc9b9c223fbf9f2712_3178960435287605206.png") no-repeat center / contain
  #app .nav a.cur,
  .user-container .user-tabs .van-tag--mark,
