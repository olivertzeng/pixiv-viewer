.artwork-meta .pid_link a,
.artwork-meta .caption a,
.user_link a
  &:hover
    text-decoration underline

.svg-icon
  color #FFB11B

.custom_theme
  accent-color var(--accent-color)

  ::-webkit-scrollbar-thumb
    background var(--accent-color)

  a,
  .svg-icon,
  .setting .app-title,
  .swiper-button-prev, .swiper-button-next,
  .van-button.van-dialog__confirm,
  .Home .home-title .app-title,
  .dark #app .nav-container .nav-bar .van-icon.active,
  .dark #app .nav-container .nav-bar .van-icon.active + span
    color var(--accent-color)

  .novel-card .series,
  #app .artwork-meta .series a,
  #app .artwork-meta .date .view,
  #app .artwork-meta .date .like,
  #app .artwork-meta .date .svg-icon,
  #app .artwork-meta .tag-list,
  .nav-bar .svg-icon.active,
  .nav-bar .svg-icon.active + span,
  .van-dropdown-menu__title--active,
  .van-dropdown-item__option--active,
  .van-dropdown-item__option--active .van-dropdown-item__icon,
  .van-calendar__day--middle,
  .van-dialog__cancel[style*="color:"]
    color var(--accent-color) !important

  .back_to_top,
  .van-tabs__line,
  #app .follow_btn.isFollowed .van-button,
  .search .search-bar-wrap .search-bar-word .word,
  .user-container .user-tabs .van-tag--mark,
  .van-calendar__day--end,
  .van-calendar__day--multiple-middle,
  .van-calendar__day--multiple-selected,
  .van-calendar__day--start,
  .van-calendar__day--start-end,
  .van-calendar__selected-day,
  #app .nav a.cur
    background var(--accent-color) !important

  .com_sel_tab.cur,
  .van-slider__bar,
  .Following .van-tab--active .van-tab__text
  .dark #app .com_sel_tab.cur,
  .dark #app .rank .nav a.cur,
  .dark #app .Following .van-tab:not(.van-tab--active) .van-tab__text.cur
    background var(--accent-color)

  #nprogress .bar,
  #app .tips code
    background-color: var(--accent-color)

  #app .tips code
    color #fff

  .van-radio__icon--checked .van-icon,
  .van-calendar__confirm.van-button,
  .setting-page .van-cell .van-button,
  .af_title + .van-form .van-button[type="submit"],
  #app .setting-page .van-switch--on
    background var(--accent-color) !important
    border-color var(--accent-color) !important

  .van-button--plain
    color var(--accent-color) !important
    border-color var(--accent-color) !important

  .app-main:has(.live_detail)
    border-color var(--accent-color) !important

  #app .artwork-meta .tag-list .tag:not(.translated):hover
    background transparent
    text-decoration underline

  .image-card .bookmark
    padding 7PX 7PX 5PX !important
    filter drop-shadow(1PX 1PX 1PX var(--accent-color)) !important
    background: rgba(255,255,255,.5)
    border-top-left-radius 0.2rem
    .van-icon,
    .van-loading__spinner
      color var(--accent-color) !important
    .van-icon
      font-size 28PX

  #app .rank .top .calendar
    background-image: url('~@/assets/images/calendar_op0.png')
    .date
      color var(--accent-color)

  @media screen and (max-width: 500px)
    .app-main:has(.setting-page)
      border-top 4PX solid var(--accent-color)

tab-text-color($color)
  .com_sel_tab.cur,
  #app .nav a.cur,
  .user-container .user-tabs .van-tag--mark,
  .search .search-bar-wrap .search-bar-word .word,
  .Following .van-tab--active .van-tab__text
    color $color !important

.custom_theme
  tab-text-color(#fefefe)
  .search .search-bar-wrap .search-bar-word .word .text
    border-color #fefefe !important

mygo-chara-icon($url)
  .setting .app-title
    img
      display none
    &-desc
      position relative
      padding-left 1.2rem
      &::before
        content ''
        position absolute
        top 50%
        left 0
        width: 0.9rem
        height: 0.9rem
        transform translateY(-50%)
  .setting:has(.user_data)
    .app-title-desc
      padding-left 0
      &::before
        display none
  .Home .home-title
    &::before
      content ''
      position absolute
      top 50%
      left 0
      width: 0.8rem
      height: 0.8rem
      transform translateY(-50%)
    .app-logo
      display none
    .app-title
      position relative
      padding-left 0.9rem
  .setting .app-title-desc::before,
  .Home .home-title::before
    background url($url) no-repeat center / contain

artwork-tag-shadow($alpha = 0.05, $isBold = false)
  #app .artwork-meta .tag-list .tag
    if $isBold
      font-weight bold
    text-shadow 1PX 1PX rgba(0,0,0,$alpha)

darken-text-preset()
  tab-text-color(#333)
  artwork-tag-shadow()

