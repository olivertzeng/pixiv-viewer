.card-box .swipe-item .image-card-wrapper
  height 100%
  padding-bottom 0 !important

.image-card,
.image-card .image,
.image-card-wrapper,
.rank-card .spec_wp,
.rank-card .spec_wp .sp_info::before,
.card-box .swipe-item .image-card,
.card-box .swipe-item .image-card .outer-meta::before,
.Spotlights .image-card,
.Spotlight .image-card .outer-meta::before
  border-radius: 12PX;

.swiper-slide .image
  transform none !important
