.author-card .swiper-slide .image-card-wrapper
  height 100%
  padding-bottom 0% !important

.Discovery,
.HomeRecommIllust,
.Spotlight,
.History,
.card-box .swipe-item
  .image-card-wrapper .meta
    background: rgba(0,0,0,.04);

.search .tags .meta
  &::after
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background: rgba(0,0,0,.04);
    border-radius: 0.10667rem;

.Spotlight,
.card-box .swipe-item
  .image-card .outer-meta
    transform translateY(-100%)
    &::before
      position: absolute;
      content: '';
      bottom: 0;
      width: 100%;
      height: 120%;
      background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.5) 0%, rgba(255, 255, 255, 0) 100%);
      // border-radius: 0.26667rem;
    .content
      color #fff !important

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

.fadeIn
  animation fadeIn 0.5s

